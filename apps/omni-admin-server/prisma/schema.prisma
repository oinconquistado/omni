generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@omni/admin-client"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  SUPPORT

  @@map("user_roles")
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED

  @@map("user_statuses")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String
  password  String
  role      UserRole   @default(SUPPORT)
  status    UserStatus @default(ACTIVE)
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")

  @@map("users")
}
{
  "name": "omni-server",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "biome lint .",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "db:generate": "prisma generate && prisma generate --schema=prisma/shared-schema.prisma",
    "db:push": "prisma db push && prisma db push --schema=prisma/shared-schema.prisma",
    "db:migrate": "prisma migrate dev && prisma migrate dev --schema=prisma/shared-schema.prisma",
    "db:reset": "prisma migrate reset --force && prisma migrate reset --force --schema=prisma/shared-schema.prisma",
    "db:studio": "prisma studio",
    "db:studio:shared": "prisma studio --schema=prisma/shared-schema.prisma",
    "db:company:generate": "prisma generate",
    "db:company:push": "prisma db push",
    "db:company:migrate": "prisma migrate dev",
    "db:company:reset": "prisma migrate reset --force",
    "db:shared:generate": "prisma generate --schema=prisma/shared-schema.prisma",
    "db:shared:push": "prisma db push --schema=prisma/shared-schema.prisma",
    "db:shared:migrate": "prisma migrate dev --schema=prisma/shared-schema.prisma",
    "db:shared:reset": "prisma migrate reset --force --schema=prisma/shared-schema.prisma"
  },
  "dependencies": {
    "@fastify/swagger": "^9.3.0",
    "@fastify/swagger-ui": "^5.1.0",
    "@prisma/client": "^6.15.0",
    "@repo/shared-types": "workspace:*",
    "fastify": "^5.2.0",
    "ioredis": "^5.7.0",
    "prisma": "^6.15.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/ioredis": "^5.0.0",
    "@types/node": "^22.15.3",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "supertest": "^7.1.4",
    "tsx": "^4.0.0",
    "typescript": "5.9.2",
    "vitest": "^3.2.4"
  }
}

{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**"]
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120,
    "attributePosition": "auto",
    "bracketSpacing": true
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error"
      },
      "performance": {
        "noAwaitInLoops": "error",
        "noDelete": "warn",
        "noImgElement": "warn",
        "noNamespaceImport": "off",
        "noReExportAll": "warn",
        "noUnwantedPolyfillio": "error",
        "useTopLevelRegex": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn"
      },
      "style": {
        "noDefaultExport": "off",
        "noImplicitBoolean": "off",
        "noShoutyConstants": "off",
        "useBlockStatements": "off",
        "useFilenamingConvention": {
          "level": "warn",
          "options": {
            "filenameCases": ["camelCase", "PascalCase", "kebab-case"],
            "strictCase": false,
            "requireAscii": true
          }
        },
        "useNamingConvention": "off"
      },
      "suspicious": {
        "noConsole": "off",
        "noDebugger": "warn",
        "noDoubleEquals": "warn",
        "noEmptyBlockStatements": "warn",
        "noExplicitAny": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "quoteStyle": "double"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf",
      "lineWidth": 120,
      "quoteStyle": "double"
    },
    "linter": {
      "enabled": true
    }
  }
}

{
  "name": "omni",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=@repo/*",
    "dev": "turbo run dev",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": " biome check --unsafe .",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "test:server": "turbo run test --filter=omni-server",
    "test:client": "turbo run test --filter=omni-client",
    "test:admin": "turbo run test --filter=omni-admin",
    "test:e2e": "turbo run test --filter=omni-client --filter=omni-admin",
    "test:coverage": "turbo run test:coverage --filter=omni-server",
    "test:watch": "turbo run test:watch --filter=omni-server",
    "dev:client": "turbo run dev --filter=omni-client",
    "dev:admin": "turbo run dev --filter=omni-admin",
    "dev:server": "turbo run dev --filter=omni-server",
    "dev:client-server": "turbo run dev --filter=omni-client --filter=omni-server",
    "dev:admin-server": "turbo run dev --filter=omni-admin --filter=omni-server",
    "build:client": "turbo run build --filter=omni-client",
    "build:admin": "turbo run build --filter=omni-admin",
    "build:server": "turbo run build --filter=omni-server"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}

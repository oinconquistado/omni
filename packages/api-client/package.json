{
  "name": "@repo/api-client",
  "version": "0.1.0",
  "type": "module",
  "description": "Lightweight HTTP client with ky.js and API endpoints",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "biome lint .",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "ky": "^1.9.1"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "typescript": "5.9.2"
  },
  "keywords": [
    "api",
    "client",
    "http",
    "ky",
    "typescript",
    "endpoints"
  ]
}

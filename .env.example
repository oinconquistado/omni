# Shared Environment Configuration for Omni SaaS
# Copy this file to .env and fill in your actual values

# Database Configuration
# Company (Omni) Database - Main business operations and admin users
OMNI_DATABASE_URL="postgresql://username:password@your-postgres-host:5432/omni_company?schema=public&sslmode=require"

# Shared Client Database - Multi-tenant client data  
SHARED_DATABASE_URL="postgresql://username:password@your-postgres-host:5432/omni_shared?schema=public&sslmode=require"

# Redis Configuration
REDIS_URL="rediss://username:password@host:port"

# Cache Configuration
CACHE_TTL=3600
CACHE_PREFIX="omni:"

# Server Configuration
NODE_ENV="development"

# Application Ports
SERVER_PORT=3002
CLIENT_PORT=3000
ADMIN_PORT=3001
DEVDOCS_PORT=3003

# API Base URL for frontend applications
NEXT_PUBLIC_API_BASE_URL=http://localhost:3002

# JWT Configuration (for future auth implementation)
JWT_SECRET="your-jwt-secret-key-here"
JWT_EXPIRES_IN="7d"

# Common Remote Service Providers Examples:
# 
# PostgreSQL (Multiple Databases):
# - Supabase: Create two projects or use different databases
#   OMNI_DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres?schema=omni"
#   SHARED_DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres?schema=shared"
# 
# - Railway: Create two services or use schemas
